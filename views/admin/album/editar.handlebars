{{>_log}}
<div class="container">
  <h3>Editar album</h3>

  <form action="/admin/editar-album/{{album.slug}}" method="POST">
    <div class="form-group">
      <label for="titulo">Título</label>
      <input type="text" name="titulo" id="titulo" class="form-control" value="{{album.titulo}}" />
    </div>
    <div class="form-group">
      <label for="descricao">Descrição</label>
      <textarea type="text" name="descricao" id="descricao" class="form-control">{{album.descricao}}</textarea>
    </div>
    <div class="form-group">
      <label for="ano">Ano de Lançamento</label>
      <input type="text" name="ano" id="ano" class="form-control" value="{{album.ano}}" />
    </div>
    <div class="form-group">
      <label for="artista">Proprietário do Album</label>
      {{#if artista}}
      <input list="list-artistas" id="artista" name="artista" autocomplete="off" class="form-control" value="{{artista.nome}}" />
      {{else}}
      <input list="list-artistas" id="artista" name="artista" autocomplete="off" class="form-control" />
      {{/if}}
    </div>
    <datalist id="list-artistas">
      {{#each artistas}}
      <option value="{{nome}}">
        {{/each}}
    </datalist>
    <input type="submit" value="Atualizar Dados" class="btn btn-primary" role="button">
  </form>
</div>