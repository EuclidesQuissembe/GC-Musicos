<h2 class="mt-2">Editar Artista</h2>
{{>_log}}
<form action="/admin/editar-artista/{{artista.slug}}" method="POST">
  <div class="form-group">
    <label for="nome">Nome do Artista</label>
    <input type="text" name="nome" class="form-control" id="nome" autocomplete="off" value="{{artista.nome}}" />
  </div>
  <div class="form-group">
    <label for="nome">Descrição</label>
    <textarea name="descricao" class="form-control" id="descricao" autocomplete="off">{{artista.descricao}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Atualizar Dados</button>
</form>