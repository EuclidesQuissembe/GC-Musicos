<div class="container">
  <h3>Adicionar nova música</h3>

  <form action="/admin/adicionar-musica" method="POST" id="formulario">
    <div class="form-group">
      <label for="titulo">Título</label>
      <input type="text" name="titulo" id="titulo" class="form-control" />
    </div>
    <div class="form-group">
      <label for="descricao">Descrição</label>
      <textarea type="text" name="descricao" id="descricao" class="form-control"></textarea>
    </div>
    <div class="form-group">
      <label for="letra">Letra</label>
      <input type="text" name="letra" id="letra" class="form-control" />
    </div>
    <div class="form-group">
      <label for="ano">Ano de Lançamento</label>
      <input type="text" name="ano" id="ano" class="form-control" />
    </div>
    <div class="form-group">
      <label for="duracao">Duração</label>
      <input type="text" name="duracao" id="duracao" class="form-control" />
    </div>
    <div class="form-group">
      <label for="genero">Gênero</label>
      <select name="genero" id="genero" class="form-control" required>
        <option value="">Selecione o genero</option>
        {{#each generos}}
        <option value="{{_id}}">{{nome}}</option>
        {{/each}}
      </select>
    </div>
    <div id="artistas">
      <div id="accoes" class="text-right">
        <button type="button" id="adicionar" class="btn btn-primary btn-small">Adicionar mais um artista</button>
      </div>
      <datalist id="list-artistas">
        {{#each artistas}}
        <option value="{{nome}}">
          {{/each}}
      </datalist>
      <input list="list-artistas" id="artista" name="artista" autocomplete="off" class="form-control" hidden />
      <div class="form-group">
        <label for="artista">Artista Principal</label>
        <input list="list-artistas" id="artista-1" name="artista-1" autocomplete="off"
          class="form-control nome-artistas" />
      </div>
    </div>
    <datalist id="list-albuns">
      {{#each albuns}}
      <option value="{{titulo}}">
        {{/each}}
    </datalist>
    <div class="form-group">
      <label for="album">Album</label>
      <input list="list-albuns" name="album" id="album" class="form-control" autocomplete="off" />
    </div>
    <input type="submit" value="Adicionar Música" class="btn btn-primary" role="button">
  </form>
</div>

<script src="/js/musica.js"></script>